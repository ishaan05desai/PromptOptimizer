{
  "manifest_version": 3,
  "name": "AI Prompt Optimizer",
  "version": "1.0.0",
  "description": "Optimizes your AI chatbot prompts for clarity and efficiency using Gemini-2.0-Flash.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "*://chat.openai.com/*",
    "*://gemini.google.com/*",
    "*://www.perplexity.ai/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://chat.openai.com/*",
        "*://gemini.google.com/*",
        "*://www.perplexity.ai/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "AI Prompt Optimizer"
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
} 